{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "out",
    "lib": ["es2020"],
    "allowJs": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "@shared": ["../../shared"]
    }
  },
  "include": ["src", "../shared"],
  "exclude": ["node_modules"]
}
